<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <!-- 日志打印格式 -->
    <property name="pattern"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} `%X{X-B3-TraceId:-}` [%thread] %-5level %logger{36} - %msg%n"/>

    <property name="LOG_FILE"
              value="./logs/eadp.log"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${pattern}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="console-local" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${pattern}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="flatfile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_FILE}.%d{yyyy-MM-dd}.gz
            </FileNamePattern>
            <maxHistory>2</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 输出到文件，只输出DEBUG以上的级别 -->
            <level>DEBUG</level>
        </filter>
    </appender>

    <springProfile name="dev">

        <logger name="com.ctg.eadp" level="DEBUG" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger name="com.ctgudal.eadp" level="DEBUG">
            <appender-ref ref="console"/>
        </logger>
        <root level="DEBUG">
            <appender-ref ref="console"/>
        </root>
    </springProfile>


    <springProfile name="local">

        <logger name="com.ctg.cicd.config.dao" level="DEBUG" additivity="false">
            <appender-ref ref="console-local"/>
        </logger>
        <logger name="com.ctgudal.eadp" level="DEBUG">
            <appender-ref ref="console"/>
        </logger>
        <root level="DEBUG">
            <appender-ref ref="console"/>
        </root>

    </springProfile>

    <springProfile name="deskcloud">

        <logger name="com.ctg.eadp" level="DEBUG" additivity="false">
            <appender-ref ref="console"/>
        </logger>
        <logger name="com.ctgudal.eadp" level="DEBUG">
            <appender-ref ref="console"/>
        </logger>
        <root level="DEBUG">
            <appender-ref ref="console"/>
        </root>

    </springProfile>

    <springProfile name="!dev">
        <logger name="com.ctgudal.eadp" level="DEBUG">
            <appender-ref ref="flatfile"/>
        </logger>
        <root level="DEBUG">
            <appender-ref ref="flatfile"/>
        </root>

    </springProfile>

</configuration>